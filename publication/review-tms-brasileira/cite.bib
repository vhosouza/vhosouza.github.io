@article{Matsuda_Tardelli_Guimarães_Souza_Baffa Filho_2019, title={Estimulação magnética transcraniana: uma breve revisão dos princípios e aplicações}, volume={13}, url={https://www.rbfm.org.br/rbfm/article/view/497}, DOI={10.29384/rbfm.2019.v13.n1.p49-56}, abstractNote={&lt;div class=&quot;page&quot; title=&quot;Page 1&quot;&gt;&lt;div class=&quot;layoutArea&quot;&gt;&lt;div class=&quot;column&quot;&gt;&lt;p&gt;&lt;span&gt;A estimulação magnética transcraniana é um método não invasivo de estimulação do córtex humano. Conhecida pela sigla TMS, do inglês &lt;/span&gt;&lt;span&gt;transcranial magnetic stimulation&lt;/span&gt;&lt;span&gt;, a técnica foi introduzida por Barker et al. em 1985. Seu funcionamento baseia-se na Lei de Faraday, na qual um intenso campo magnético que varia rapidamente é capaz de induzir um campo elétrico na superfície do cérebro, despolarizando os neurônios no córtex cerebral. Devido à sua versatilidade, a TMS é utilizada atualmente tanto no âmbito da pesquisa quanto em aplicações clínicas. Entre as aplicações clínicas, a TMS é utilizada como ferramenta diagnóstica e também como técnica terapêutica de algumas doenças neurodegenerativas e distúrbios psiquiátricos como a depressão, a doença de Parkinson e o tinnitus. Quanto à ferramenta diagnóstica, destaca-se o mapeamento motor, uma técnica de delimitação da área de representação do músculo-alvo em sua superfície cortical, cuja aplicabilidade pode ser em estudos da &lt;/span&gt;&lt;span&gt;fi&lt;/span&gt;&lt;span&gt;siologia cerebral para avaliar danos ao córtex motor e trato corticoespinhal. Esta revisão teve como objetivo introduzir a física, os elementos básicos, os princípios biológicos e as principais aplicações da TMS.&lt;/span&gt;&lt;/p&gt;&lt;/div&gt;&lt;/div&gt;&lt;/div&gt;}, number={1}, journal={Revista Brasileira de Física Médica}, author={Matsuda, Renan Hiroshi and Tardelli, Gabriela Pazin and Guimarães, Carlos Otávio and Souza, Victor Hugo and Baffa Filho, Oswaldo}, year={2019}, month={set.}, pages={49-56} }